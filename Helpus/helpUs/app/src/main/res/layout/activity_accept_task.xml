<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bgforacceptordecline"
    android:theme="@style/ThemeOverlay.Newdiplom.FullscreenContainer"
    tools:context=".domain.presentation.AcceptTask" >

    <ProgressBar
        android:id="@+id/Bar"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.531"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.86" />

    <LinearLayout
        android:id="@+id/linearLayouta4"
        android:layout_width="320dp"
        android:layout_height="100dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.459"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayouta3">

        <Button
            android:id="@+id/accepted"
            android:layout_width="260dp"
            android:layout_height="68dp"
            android:layout_marginStart="33dp"
            android:backgroundTint="#C94B9EF8"
            android:fontFamily="sans-serif-medium"
            android:text="@string/accepttask"
            android:textColor="#FFFFFF"
            app:cornerRadius="25dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            tools:layout_editor_absoluteY="510dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearaccepted"
        android:layout_width="match_parent"
        android:layout_height="47dp"
        android:background="@drawable/squarefortext"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
    </LinearLayout>

    <TextView
        android:id="@+id/urtask"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="125dp"

        android:layout_marginEnd="126dp"
        android:fontFamily="sans-serif-medium"
        android:text="@string/alltaskinf"
        android:textColor="#535353"
        android:textSize="34sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <LinearLayout
        android:id="@+id/linearLayouta1"
        android:layout_width="320dp"
        android:layout_height="200dp"
        android:layout_marginTop="12dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.461"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearaccepted">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/catimage"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginStart="30dp"
            android:scaleType="centerCrop"
            app:layout_constraintStart_toStartOf="parent"
            app:shapeAppearanceOverlay="@style/circle"
            app:srcCompat="@drawable/housework"
            tools:layout_editor_absoluteY="122dp" />

        <TextView
            android:id="@+id/cattask"
            android:layout_width="179dp"
            android:layout_height="51dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="15dp"

            android:fontFamily="sans-serif-medium"
            android:text="Работа по дому"
            android:textColor="#000000"
            android:textSize="21sp"
            app:layout_constraintBottom_toTopOf="@+id/nametask"
            app:layout_constraintStart_toEndOf="@+id/catimage"
            app:layout_constraintTop_toBottomOf="@+id/linearaccept"
            app:layout_constraintVertical_bias="1.0" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearaccept"
        android:layout_width="match_parent"
        android:layout_height="47dp"
        android:background="@drawable/border"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">
        <ImageView
            android:id="@+id/profiled"
            android:layout_width="135dp"
            android:layout_height="35dp"
            app:srcCompat="@drawable/toprofile" />

        <ImageView
            android:id="@+id/myaccepted"
            android:layout_width="135dp"
            android:layout_height="35dp"
            app:srcCompat="@drawable/task" />

        <ImageView
            android:id="@+id/searchtask"
            android:layout_width="135dp"
            android:layout_height="35dp"
            app:srcCompat="@drawable/loupeclicked"
            tools:layout_editor_absoluteX="211dp"
            tools:layout_editor_absoluteY="581dp" />



    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayouta2"
        android:layout_width="320dp"
        android:layout_height="150dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.459"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayouta1">

        <TextView
            android:id="@+id/nametask"
            android:layout_width="250dp"
            android:layout_height="150dp"
            android:layout_marginStart="40dp"
            android:layout_marginTop="0dp"
            android:fontFamily="sans-serif-medium"
            android:inputType="textMultiLine"
            android:text="Выгулять пса 2 раза за сутки"
            android:textColor="@color/black"
            android:textSize="22sp"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="55dp"
            tools:layout_editor_absoluteY="292dp" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayouta3"
        android:layout_width="320dp"
        android:layout_height="100dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.459"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayouta2">

        <TextView
            android:id="@+id/datetask"
            android:layout_width="189dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="75dp"
            android:fontFamily="sans-serif-medium"
            android:text="Работа по дому"
            android:textColor="#858484"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:layout_editor_absoluteY="465dp" />
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>