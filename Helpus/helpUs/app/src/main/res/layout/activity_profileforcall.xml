<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bgforprofile"
    tools:context=".domain.presentation.profileforcall">

    <Button
        android:id="@+id/callbyphone"
        android:layout_width="200dp"
        android:layout_height="68dp"
        android:layout_marginTop="28dp"
        android:backgroundTint="#C94B9EF8"
        android:fontFamily="sans-serif-medium"
        android:text="Позвонить"
        android:textColor="#FFFFFF"
        app:cornerRadius="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/aboutvoluntage" />

    <TextView
        android:id="@+id/typeofvolunteer2"
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:layout_marginTop="16dp"
        android:fontFamily="sans-serif-black"
        android:text="@string/volunteer"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/avatarsvoluntaccepteed" />

    <TextView
        android:id="@+id/voluntacceptedname"
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:layout_marginTop="16dp"
        android:fontFamily="sans-serif-black"
        android:text="@string/namef"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/typeofvolunteer2" />

    <TextView
        android:id="@+id/aboutvoluntage"
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:layout_marginTop="19dp"
        android:fontFamily="sans-serif-medium"
        android:text="@string/aged"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/voluntacceptedname" />

    <TextView
        android:id="@+id/aboutvoluntdata6"
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:layout_marginStart="6dp"
        android:layout_marginTop="19dp"
        android:fontFamily="sans-serif-medium"
        android:text="50"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        app:layout_constraintStart_toEndOf="@+id/aboutvoluntage"
        app:layout_constraintTop_toBottomOf="@+id/voluntacceptedname" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/avatarsvoluntaccepteed"
        android:layout_width="179dp"
        android:layout_height="162dp"
        android:layout_marginTop="40dp"
        android:src="@drawable/profileman"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearcallforzak"
        app:shapeAppearanceOverlay="@style/Circular" />

    <LinearLayout
        android:id="@+id/linearcallforzak"
        android:layout_width="match_parent"
        android:layout_height="47dp"
        android:background="@drawable/squarefortext"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


    </LinearLayout>

    <TextView
        android:id="@+id/profilesvolnteer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-medium"
        android:text="@string/volunteeraccepted"
        android:textColor="#535353"
        android:textSize="34sp"
        app:layout_constraintEnd_toEndOf="@+id/linearcallforzak"
        app:layout_constraintStart_toStartOf="@+id/linearcallforzak"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
      android:id="@+id/linearvolprof"
        android:layout_width="match_parent"
        android:layout_height="47dp"

        android:background="@drawable/border"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageView
            android:id="@+id/toprofile"
            android:layout_width="105dp"
            android:layout_height="35dp"
            app:srcCompat="@drawable/toprofile"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="408dp" />

        <ImageView
            android:id="@+id/mytasks"
            android:layout_width="105dp"
            android:layout_height="35dp"
            app:srcCompat="@drawable/task"
            tools:layout_editor_absoluteX="46dp"
            tools:layout_editor_absoluteY="473dp" />

        <ImageView
            android:id="@+id/addtask"
            android:layout_width="105dp"
            android:layout_height="35dp"
            app:srcCompat="@drawable/addtask" />

        <ImageView
            android:id="@+id/call"
            android:layout_width="105dp"
            android:layout_height="35dp"
            app:srcCompat="@drawable/phonecallclicked"
            tools:layout_editor_absoluteX="63dp"
            tools:layout_editor_absoluteY="478dp" />
    </LinearLayout>

    <ProgressBar
        android:id="@+id/progressBar5"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/linearvolprof"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>